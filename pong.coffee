	class ComputerPaddle extends c.Entity
		constructor: ->
			super

			@ball = @game.getEntityById('ball')

		update: =>
			super

			ballMidY = @ball.pos.y + @ball.size.y / 2
			paddleMidY = @pos.y + @size.y / 2

			if ballMidY < paddleMidY
				@body.ApplyImpulse(new b2Vec2(0, -3000), @body.GetPosition())
